    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="espresso" class="com.vvit.springcore.bean.Espresso"></bean>
    <bean id="cuppiccino" class="com.vvit.springcore.bean.Cuppiccino"></bean>
    <bean id="coffeMachine" class="com.vvit.springcore.service.CoffeMachine">
    	<property name="coffeType" ref="espresso"></property>
    </bean>

</beans>